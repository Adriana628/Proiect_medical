@model Proiect_medical.Models.Appointment

@{
    ViewData["Title"] = "Șterge Programarea";
}

<h2>Șterge Programarea</h2>
<h3>Sigur vrei să ștergi această programare?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Date</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.Doctor.Name</dd>

        <dt class="col-sm-2">Notițe</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Șterge</button>
        <a asp-action="Index" class="btn btn-secondary">Înapoi</a>
    </form>
</div>
