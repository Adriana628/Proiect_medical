@model Proiect_medical.Models.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
      
    </dl>
</div>
@if (Model.Subscription != null)
{
    <h4>Abonament activ</h4>
    <p><strong>Nume:</strong> @Model.Subscription.Name</p>
    <p><strong>Preț:</strong> @Model.Subscription.Price Lei</p>
    <p><strong>Durată:</strong> @Model.Subscription.DurationInMonths luni</p>
}
else
{
    <p class="text-danger"><strong>Nu ești abonat!</strong></p>
}



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
</div>
